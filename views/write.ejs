<%- include('partials/header') %>
<link rel="stylesheet" href="css/write.css" />

<div class="btn-holder">
  <a href="/home" class="btn"><img style="height: 25px; width: 25px;" src="https://img.icons8.com/ios-filled/50/000000/multiply.png"/></a>
  <button style="float:right" class="btn" form="note" type="submit" name="button"><img style="height: 20px; width: 20px;" src="https://img.icons8.com/android/24/000000/checkmark.png"/></button>
</div>

<form id="note" class="paper" action="/write" method="POST">
  <input id="title" class="write-input" type="text" name="postTitle" placeholder="Title" autocomplete="off"/>
  <textarea id="body" class="write-input" name="postBody" rows="8" cols="80" placeholder="Write here, write now..."></textarea>
</form>

<%- include('partials/footer') %>
